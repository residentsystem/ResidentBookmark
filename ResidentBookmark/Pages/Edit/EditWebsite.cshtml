@page "{id:int}"
@model ResidentBookmark.Pages.EditWebsiteModel
@{
}
    <div class="container intro">
        <section class="row">
            <article class="col-sm-12">
                <header>
                    <h1>Edit Website - @Model.Website?.Name</h1>
                </header>
            </article>
        </section>
    </div>

    <div class="container">
        <section class="row">
            <article class="col-sm-8 col-center">

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Website.WebsiteId" />
                    
                    <div class="form-group">
                        <label asp-for="Website.Name" class="control-label">Name:</label>
                        <input asp-for="Website.Name" class="form-control" name="Website.Name" value="@Model.Website.Name">
                        <span asp-validation-for="Website.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Website.Location" class="control-label">Location:</label>
                        <input asp-for="Website.Location" class="form-control" name="Website.Location" value="@Model.Website.Location">
                        <span asp-validation-for="Website.Location" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Website.Note" class="control-label">Note:</label>
                        <input asp-for="Website.Note" class="form-control" name="Website.Note" value="@Model.Website.Note">
                        <span asp-validation-for="Website.Note" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="hidden" asp-for="Website.LabelId" class="form-control" value="@Model.LabelId" />
                    </div>

                    <div class="form-group">
                        <input class="btn btn-dark" type="submit" value="Update Bookmark" />
                        <a class="btn btn-dark" asp-page="/Index">Cancel</a>
                    </div>
                </form>
            </article>
        </section>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}