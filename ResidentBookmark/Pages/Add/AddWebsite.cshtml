@page
@model ResidentBookmark.Pages.AddWebsiteModel
@{
}
    <div class="container intro">
        <section class="row">
            <article class="col-sm-12">
                <header>
                    <h1>Add Website</h1>
                    <p>@Model.QueryString</p>
                </header>
            </article>
        </section>
    </div>

    <div class="container">
        <section class="row">
            <article class="col-sm-8 col-center">

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Website.Name" class="control-label">Name:</label>
                        <input asp-for="Website.Name" class="form-control" placeholder="Enter a name" />
                        <span asp-validation-for="Website.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Website.Location" class="control-label">Location:</label>
                        <input asp-for="Website.Location" class="form-control" placeholder="Enter a location (Url)" />
                        <span asp-validation-for="Website.Location" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Website.Note" class="control-label">Note:</label>
                        <input asp-for="Website.Note" class="form-control" placeholder="Add a note" />
                        <span asp-validation-for="Website.Note" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="hidden" asp-for="Website.LabelId" class="form-control" value="@Model.LabelId" />
                    </div>
                    
                    <div class="form-group">
                        <input type="hidden" asp-for="Website.Date" class="form-control" value="@Model.Date" />
                        <span asp-validation-for="Website.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-dark" type="submit" value="Add Bookmark" />
                        <a class="btn btn-dark" asp-page="/Label" asp-page-handler="@Model.QueryString">Cancel</a>
                    </div>
                </form>

            </article>
        </section>
    </div>

    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}